<h1 class="mt-3">ĐỔI MẬT KHẨU</h1>
<form asp-action="DoiMatKhau" asp-controller="TaiKhoan" method="post">
    <div class="form-group">
        <label class="control-label">
            Mật khẩu mới
        </label>
        <input name="password" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">
            Nhập lại mật khẩu mới
        </label>
        <input name="repassword" class="form-control" />
    </div>
    <div class="form-group">
        <label class="control-label">
            Mã xác minh
        </label>
        <input name="confirmcode" id="code" class="form-control" />
    </div>
    <input hidden type="email" name="email" value="@ViewBag.email" />
    <input hidden type="text" name="code" value="@ViewBag.code" />
    <span style="color:red;">@ViewBag.text</span>
    <div class="form-group">
        <input type="submit" value="Xác nhận" class="btn btn-primary my-3" />
    </div>
</form>

